
<div class="container">
  <div class="row">

    <% if current_user.is_admin %>
      <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-success btn-sm"  %> |
    <% end %>
    <%= link_to 'Back', events_path, class: "btn btn-info btn-sm"  %>

    <p id="notice"><%= notice %></p>

  

    <div class="col-md4">
      <%= image_tag @event.picture_event, height: 220, width: 220 %>
    </div>

    <div class="col-md8">
      <strong>Event date:</strong>
      <%= @event.event_date%>

    <p>
      <strong>Event title:</strong>
      <%= @event.event_title %>
    </p>

    <p>
      <strong>Event description:</strong>
      <%= @event.event_description %>
    </p>

    <p>
      <strong>Place event:</strong>
      <%= @event.place_event %>
    </p>

    <p>
      <strong>Agenda event:</strong>
      <%= @event.agenda_event %>
    </p>

    <p>
      <strong>Url:</strong>
      <%= @event.url %>
    </p>

    <p>
      <strong>Inscritos a la Fecha : </strong><%= UserEvent.where("event_id = ?", @event.id).count %>
    </p>
        </div>

  </div>
</div>
