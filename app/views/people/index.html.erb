<h1>Listing people</h1>

<table>
  <thead>
    <tr>
      <th>Nit</th>
      <th>Names</th>
      <th>Last name</th>
      <th>Last name married</th>
      <th>Born date</th>
      <th>Profession</th>
      <th>Career title</th>
      <th>Gender</th>
      <th>Status</th>
      <th>Last Date Employee</th>
      <th>Personal mail</th>
      <th>Home phone</th>
      <th>Mobile</th>
      <th>Facebook</th>
      <th>Linkedin</th>
      <th>Twitter</th>
      <th>Google</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.nit %></td>
        <td><%= person.names %></td>
        <td><%= person.last_name %></td>
        <td><%= person.last_name_married %></td>
        <td><%= person.born_date %></td>
        <td><%= person.profession.name %></td>
        <td><%= person.career_title %></td>
        <td><%= person.gender %></td>
        <td><%= person.status %></td>
        <td><%= person.last_date_employee %></td>
        <td><%= person.personal_mail %></td>
        <td><%= person.home_phone %></td>
        <td><%= person.mobile %></td>
        <td><%= person.facebook %></td>
        <td><%= person.linkedin %></td>
        <td><%= person.twitter %></td>
        <td><%= person.google %></td>
        <td><%= person.picture %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

